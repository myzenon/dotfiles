[push]
	autoSetupRemote = true
[commit]
	gpgsign = true
[user]
	email = si.zenon@gmail.com
	name = Zenon 'SI
[init]
	defaultBranch = main
[gpg]
	program = gpg
[tag]
	forceSignAnnotated = false
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    light = false
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
[pull]
	rebase = true
[rebase]
	autoStash = true
